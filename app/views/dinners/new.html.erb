<% provide(:title, "Home") %>

<div class="container">
  <div class="jumbotron background">
    <h1 class="text-center">Welcome!</h1>
    <h2 class="text-center">Lets invite some friends for dinner!</h2>

    <%= form_for @dinner do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name, class: 'form-control', placeholder: 'name your dinner' %><br />
      </div>

      <div class="form-group form-inline">
        <%= f.label :Date %>:
        <%= f.date_field :date, class: 'form-control' %>

        <%= f.label :Time %>:
        <%= f.time_field :time, class: 'form-control' %>

        <%= f.label :Location %>:
        <%= f.text_field :location, class: 'form-control' %><br />
      </div>

      <div class="form-group">
        <%= f.label :email %>:
        <%= f.text_field :email, class: 'form-control', placeholder: 'your email' %><br />
      </div>

      <%= f.submit "Create Dinner", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
